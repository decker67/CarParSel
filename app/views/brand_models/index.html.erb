<h1>Modelle</h1>

<%= link_to  image_tag('plus_16.png'), new_brand_model_path %>

<table>
  <thead>
    <tr>
      <th>Modell</th>
      <th>Automarke</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @brand_models.each do |brand_model| %>
      <tr>
        <td><%= brand_model.name %></td>
        <td><%= brand_model.brand.name %></td>
        <td><%= link_to image_tag('pencil_16.png'), edit_brand_model_path(brand_model) %></td>
        <td><%= link_to image_tag('trash_16.png'), brand_model, method: :delete, data: { confirm: 'Sind Sie sicher?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
