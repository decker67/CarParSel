<div class="page-header">
  <h1>Konfiguration</h1>
</div>

<div class="panel panel-default">
  <div class="panel-heading">Konfiguration
    <span style="margin-left: 10px;"><%= link_to image_tag('plus_16.png'), new_parameter_path, class: 'btn btn-default' %></span>
  </div>
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Wert</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @parameters.each do |parameter| %>
        <tr>
          <td class="vertical_centered"><%= parameter.name %></td>
          <td class="vertical_centered"><%= parameter.value %></td>
          <td><%= link_to image_tag('pencil_16.png'), edit_parameter_path(parameter), class: 'btn btn-default' %></td>
          <td><%= link_to image_tag('trash_16.png'), parameter, method: :delete, data: { confirm: 'Sind Sie sicher?' }, class: 'btn btn-default' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @parameters %>
</div>
