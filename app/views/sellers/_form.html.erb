<%= form_for(@seller, html: { class: 'form-horizontal' } ) do |f| %>

  <%= render 'layouts/errors', object: @seller %>

  <!--%= f.hidden_field :lock_version unless current_page?( action: :new ) %-->

  <div class="form-group">
    <%= f.label :first_name, 'Vorname', class: 'col-md-2' %>
    <%= f.text_field :first_name, class: 'col-md-2' %>
  </div>
  <div class="form-group">
    <%= f.label :last_name, 'Nachname', class: 'col-md-2' %>
    <%= f.text_field :last_name, class: 'col-md-2' %>
  </div>
  <div class="form-group">
    <%= f.label :street, 'Strasse Nr', class: 'col-md-2' %>
    <%= f.text_field :street, class: 'col-md-2' %>
  </div>
  <div class="form-group">
    <%= f.label :city, 'PLZ Stadt', class: 'col-md-2' %>
    <%= f.text_field :city, class: 'col-md-2' %>
  </div>
  <div class="form-group">
    <%= f.label :phone, 'Telefon', class: 'col-md-2' %>
    <%= f.text_field :phone, class: 'col-md-2' %>
  </div>
  <div class="form-group">
    <div class="col-md-4">
      <%= link_to 'Abbrechen', sellers_path, class: 'btn btn-default' %>
      <%= f.submit 'Speichern', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
