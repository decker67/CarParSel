<div class="page-header">
  <h1>Lagerorte</h1>
</div>

<div class="panel panel-default">
  <div class="panel-heading">Lagerorte
    <span style="margin-left: 10px;"><%= link_to image_tag('plus_16.png'), new_storage_path, class: 'btn btn-default' %></span>
  </div>
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @storages.each do |storage| %>
        <tr>
          <td class="vertical_centered"><%= storage.name %></td>
          <td><%= link_to image_tag('pencil_16.png'), edit_storage_path(storage), class: 'btn btn-default' %></td>
          <td><%= link_to image_tag('trash_16.png'), storage, method: :delete, data: { confirm: 'Sind Sie sicher?' }, class: 'btn btn-default' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @storages %>
</div>


