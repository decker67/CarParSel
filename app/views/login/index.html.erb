
<%= form_tag '/login', method: :post do %>

  <div class="form-group">
    <%= label_tag :user, 'Benutzer' %>
    <%= text_field_tag :user %>
  </div>
  <div class="form-group">
    <%= label_tag :password, 'Kennwort' %>
    <%= password_field_tag :password %>
  </div>
  <div class="form-group">
    <div class="col-md-4">
      <%= submit_tag 'Anmelden', class: 'btn btn-default' %>
    </div>
  </div>

<% end %>