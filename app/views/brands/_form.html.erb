<%= form_for @brand, html: { class: 'form-horizontal' } do |f| %>

  <% if @brand.errors.any? %>
    <div id="error_explanation">
      <h2>Bitte korrigieren Sie die Eingabe:</h2>

      <ul>
      <% @brand.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, 'Name', class: 'col-md-1' %>
    <%= f.text_field :name, class: 'col-md-2' %>
  </div>
  <div class="form-group">
    <div class="col-md-4">
      <%= link_to 'Abbrechen', brands_path, class: 'btn btn-default' %>
      <%= f.submit 'Speichern', class: 'btn btn-default' %>
    </div>
  </div>

<% end %>
